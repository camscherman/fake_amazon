

<%= simple_form_for @product do |p| %>



   
   <%= p.input :title, label: 'Product Title' %>
   <%= p.input :description %>
   <%= p.input :price %>
   <%= p.association :tags, input_html: { class: 'chosen-select' } %>
    <%= p.association :category , as: :select %>
    
   <%= p.submit class: 'btn btn-primary' %>


<% end %>